extends layout

block content
  h1= 'Farmer backend interface'
  h2= 'Here you can manage all related aspecs of supply, demand and order fullfilment'
    form#searchBox(action='/farmer')
      br
      h4= 'Place a new order:'
      input(type='text', name='order')
      br
      br
      input(type='submit', value='New Order')
      br
      br
      h4= 'Check up on exisitng order: '
      input(type='text', name='query')
      br
      br
      input(type='submit', value='Existing order')
    h3= qTitle
    h4= qResult
    br
    br
  button(onclick = "returnhome()") Return to Home Screen
  script.
    function returnhome() {
      window.location.href = '/'
    }

